		{
			"name": "Post Ticket",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.request.headers.add({\r",
							"    key: 'Authorization',\r",
							"    value: 'Bearer ' + pm.environment.get(\"bearerToken\")\r",
							"});\r",
							"\r",
							"let requestBody = JSON.parse(pm.request.body.raw);\r",
							"requestBody.projectId = pm.environment.get(\"projectId\");\r",
							"\r",
							"pm.request.body.update(JSON.stringify(requestBody));\r",
							"pm.request.headers.add({\r",
							"    key: 'Content-Type',\r",
							"    value: 'application/json'\r",
							"});\r",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Überprüfe den Statuscode\", function () {\r",
							"    // Überprüfe, ob der Statuscode 201 ist\r",
							"    if (pm.response.code === 201) {\r",
							"        pm.expect(pm.response.code).to.eql(201);\r",
							"    } else {\r",
							"        // Wenn der Statuscode nicht 201 ist, gibt eine Nachricht mit dem tatsächlichen Statuscode aus\r",
							"        console.log(\"Erhaltener Statuscode: \" + pm.response.code);\r",
							"        pm.expect.fail(\"Erwartet: 201 Created. Erhalten: \" + pm.response.code);\r",
							"    }\r",
							"});\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
